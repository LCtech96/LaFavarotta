// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String
  order       Int
  description String?
  items       MenuItem[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model MenuItem {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
  ingredients String[] // Array of ingredients
  allergens   String[] // Array of allergens
  isVegan     Boolean  @default(false)
  isGlutenFree Boolean @default(false)
  isBestSeller Boolean @default(false)
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CartItem {
  id          String   @id @default(uuid())
  menuItemId Int
  quantity    Int      @default(1)
  customizations Customization[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Customization {
  id         String   @id @default(uuid())
  cartItemId String
  cartItem   CartItem @relation(fields: [cartItemId], references: [id], onDelete: Cascade)
  type       String   // "add" or "remove"
  ingredient String
  createdAt  DateTime @default(now())
}

model Staff {
  id          Int      @id @default(autoincrement())
  name        String
  role        String
  description String
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Admin {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Content {
  id          String   @id @default(uuid())
  key         String   @unique
  value       String
  type        String   // 'text', 'image', 'description'
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
}

model Post {
  id          Int      @id @default(autoincrement())
  imageUrl    String
  description String
  title       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model HolidayMenu {
  id          Int                    @id @default(autoincrement())
  name        String                 @unique // 'Natale', 'Capodanno', 'Epifania', 'Pasqua', 'Altre festività', etc.
  displayName String                 // Nome visualizzato
  previewImage String?               // Immagine di anteprima per l'highlight
  menuText    String?                // Testo unico del menu (opzionale, alternativa ai piatti) - DEPRECATO: usa HolidayMenuVariant
  menuPrice   Float?                 // Prezzo del menu completo (opzionale) - DEPRECATO: usa HolidayMenuVariant
  menuImages  String[]               // Array di immagini per il menu testuale - DEPRECATO: usa HolidayMenuVariant
  items       HolidayMenuItem[]
  variants    HolidayMenuVariant[]  // Menu multipli per questa festività
  createdAt   DateTime               @default(now())
  updatedAt   DateTime               @updatedAt
}

model HolidayMenuVariant {
  id          Int               @id @default(autoincrement())
  holidayMenuId Int
  holidayMenu HolidayMenu      @relation(fields: [holidayMenuId], references: [id], onDelete: Cascade)
  title       String            // Titolo del menu (es. "Menu Completo", "Menu Vegetariano")
  menuText    String?           // Testo del menu
  menuPrice   Float?            // Prezzo del menu
  menuImages  String[]          // Array di immagini per il menu
  order       Int               @default(0) // Ordine di visualizzazione
  items       HolidayMenuItemVariant[]
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
}

model HolidayMenuItemVariant {
  id          Int                 @id @default(autoincrement())
  variantId   Int
  variant     HolidayMenuVariant  @relation(fields: [variantId], references: [id], onDelete: Cascade)
  name        String              // Titolo del piatto
  ingredients String[]            // Array di ingredienti
  price       Float
  imageUrl    String?
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
}

model HolidayMenuItem {
  id          Int         @id @default(autoincrement())
  holidayMenuId Int
  holidayMenu HolidayMenu @relation(fields: [holidayMenuId], references: [id], onDelete: Cascade)
  name        String      // Titolo del piatto
  ingredients String[]   // Array di ingredienti
  price       Float
  imageUrl    String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

